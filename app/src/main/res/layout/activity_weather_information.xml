<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".WeatherInformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/cityNameTV"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="---------"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="28sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/currentWeatherIV"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/currentTempTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="-- C"
                    android:textColor="@color/gray"
                    android:textSize="28sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/currentWDescriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-------"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginTop="26dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="4dp"
                    android:src="@drawable/wind_speed"
                    app:tint="@color/dark_gray" />

                <TextView
                    android:id="@+id/windSpeedTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="---- m/s"
                    android:textColor="@color/gray"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="4dp"
                    android:src="@drawable/barometer"
                    app:tint="@color/dark_gray" />

                <TextView
                    android:id="@+id/pressureTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="----- mb"
                    android:textColor="@color/gray"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="4dp"
                    android:src="@drawable/precipitation" />

                <TextView
                    android:id="@+id/popTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="--%"
                    android:textColor="@color/gray"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/day1TitileTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/day1IconIV"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginVertical="8dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/day1MinTempTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- C"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/day1MaxTempTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- C"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/day2TitileTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/day2IconIV"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginVertical="8dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/day2MinTempTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- C"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/day2MaxTempTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- C"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/day3TitileTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/day3IconIV"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginVertical="8dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/day3MinTempTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- C"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/day3MaxTempTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- C"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/day4TitileTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/day4IconIV"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginVertical="8dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/day4MinTempTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- C"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/day4MaxTempTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- C"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>